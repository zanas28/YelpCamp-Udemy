<% include partials/headers %>

<div class="container">
    <header class="jumbotron" style="margin-top: 5%;">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campgrounds</a>
            </p>
        </div>
    </header>

    <div class="row text-center">
        <% campgrounds.forEach((campground) => { %>
            <div class="col-md-3 col-sm-6" style="margin-top: 1em;">
                <div class="img-thumbnail">
                    <img src="<%= campground.image %>" class="img-fluid">
                    <div class="caption">
                        <h6 style="margin-top: 10px;"><%= campground.name %></h6>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<% include partials/footers %>